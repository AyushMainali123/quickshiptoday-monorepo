{
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "functions:watch": "turbo run dev:watch --scope=\"@quickshiptoday/firebase-functions\"",
    "build:web": "turbo run build --scope=\"@quickshiptoday/web\"",
    "dev:web": "firebase emulators:start && pnpm run functions:watch && turbo run dev --scope=\"@quickshiptoday/web\"",
    "logs": "turbo run logs",
    "firebase:emulators:start": "firebase emulators:start",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:firestore-indexes": "firebase deploy --only firestore:indexes"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10",
  "name": "monorepo-test",
  "dependencies": {
    "dotenv-cli": "^7.2.1"
  }
}
